{% extends 'base.html.twig' %}

{% block title %}Listado de Películas{% endblock %}

{% block content %}
<div class="container mt-4">
    <h2 class="mb-4">Listado de Películas</h2>

    {{ form_start(form) }}
        {{ form_row(form.titulo) }}
        {{ form_row(form.inicio) }}
        {{ form_row(form.fin) }}
        {{ form_row(form.orden) }}
        <button type="submit">Buscar</button>
    {{ form_end(form) }}

    <div class="table-responsive-md">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Título</th>
                    <th>Año</th>
                    {# <th>Sinopsis</th> #}
                    <th>Imagen</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for pelicula in peliculas %}
                    <tr>
                        <td>{{ pelicula.titulo }}</td>
                        <td>{{ pelicula.anio }}</td>
                        {# <td>{{ pelicula.sinopsis[:100] ~ '...' }}</td> #}
                        <td>
                            {% if pelicula.imagen %}
                                <img src="{{ pelicula.imagen }}" alt="Imagen de {{ pelicula.titulo }}" width="50">
                            {% else %}
                                <span class="text-muted">Sin imagen</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="#" class="btn btn-primary btn-sm">Ver</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center text-muted">No hay películas registradas.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
